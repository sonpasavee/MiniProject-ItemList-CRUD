<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Item List</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>All Items</h1>

  <a href="/items/new">âž• Add New Item</a>

  <table border="1" cellpadding="10">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.desc %></td>
          <td><%= item.price %></td>
          <td>
            <a href="/items/<%= item._id %>">View</a> |
            <a href="/items/<%= item._id %>/edit">Edit</a> |
            <form action="/items/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Delete this item?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
